<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UpangCalendarFragment">

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerColor="@color/phinmaSecondary"
        app:selectionColor="@color/phinmaSecondary"
        app:selectionLabelColor="@color/white"
        app:todayLabelColor="@color/phinmaSecondary"
        app:highlightedDaysLabelsColor="@color/phinmaPrimary"
        app:eventsEnabled="true"
        app:previousButtonSrc="@drawable/baseline_arrow_back_24"
        app:forwardButtonSrc="@drawable/baseline_arrow_forward_24"
        app:type="one_day_picker"
        />
</FrameLayout>
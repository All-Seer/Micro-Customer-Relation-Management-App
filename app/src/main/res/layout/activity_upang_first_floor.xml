<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpangFirstFloor"
    android:padding="5dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:text="First Floor"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mapImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/floor1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnCanteen"
                android:layout_width="45dp"
                android:layout_height="225dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="110dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnIsolation"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="140dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnIncubation"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="210dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnCRgirls"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="70dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/btnExit"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginStart="137dp"
                android:layout_marginBottom="70dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/btnTesting"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginStart="210dp"
                android:layout_marginBottom="70dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/btnCRboys"
                android:layout_width="55dp"
                android:layout_height="40dp"
                android:layout_marginStart="300dp"
                android:layout_marginBottom="70dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/btnBDO"
                android:layout_width="185dp"
                android:layout_height="60dp"
                android:layout_marginBottom="470dp"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/btnStage"
                android:layout_width="185dp"
                android:layout_height="50dp"
                android:layout_marginBottom="340dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/btnAtrium"
                android:layout_width="185dp"
                android:layout_height="280dp"
                android:layout_marginTop="41dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/transparent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/btnCommercial"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="45dp"
                android:layout_marginTop="140dp"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnCommercial2"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="208dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnEntrance"
                android:layout_width="45dp"
                android:layout_height="80dp"
                android:layout_marginEnd="41dp"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnMarketing"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="41dp"
                android:layout_marginTop="130dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnHydraulics"
                android:layout_width="45dp"
                android:layout_height="50dp"
                android:layout_marginEnd="41dp"
                android:layout_marginTop="265dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
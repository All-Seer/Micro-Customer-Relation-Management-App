<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".phinma_studentmanual">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="87dp"
                android:scaleType="fitStart"
                android:src="@drawable/student_manual" />

            <TextView
                android:id="@+id/manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="20dp"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:text="@string/manual" />

            <TextView
                android:id="@+id/manual2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manual2"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/missionvission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="40dp"
                android:text="@string/missionvision" />
            <TextView
            android:id="@+id/missionvission2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:text="@string/missionvision2" />
            <TextView
                android:id="@+id/missionvission3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:text="@string/missionvision3" />
            <TextView
                android:id="@+id/missionvission4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="@string/missionvision4"/>
            <TextView
                android:id="@+id/missionvission5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:text="@string/missionvision5" />
            <TextView
                android:id="@+id/missionvission6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="@string/missionvision6"/>
            <TextView
                android:id="@+id/missionvission7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:text="@string/missionvision7" />
            <TextView
                android:id="@+id/policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="40dp"
                android:text="@string/policy" />
            <TextView
                android:id="@+id/policy2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="@string/policy2"/>
            <TextView
                android:id="@+id/policy3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:text="@string/policy3" />
            <TextView
                android:id="@+id/policy4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_margin="10dp"
                android:text="@string/policy4" />

            <Button
                android:id="@+id/manual3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/pdff"
                android:layout_gravity="center"/>


            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>

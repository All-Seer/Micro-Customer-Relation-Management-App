                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA EDUCATION HOLDINGS, INC. (PEHI)"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"/>

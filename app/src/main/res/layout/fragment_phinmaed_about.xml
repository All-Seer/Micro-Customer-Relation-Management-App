                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA COC opened its second campus in Barangay Puerto, Cagayan de Oro"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="2014"
                android:textAlignment="center"
                android:textColor="#036e03"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA AU SOUTH CAMPUS"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA AU opened its South Campus to cater to students in the southern part of Nueva Ecija."
                    android:textSize="10sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 YEARS IN EDUCATION"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA Education celebrated its 10th year anniversary with four schools and six campuses."
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:padding="3dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="2015"
                android:textAlignment="center"
                android:textColor="#036e03"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA UPANG URDANETA CAMPUS"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA UPang opened its campus to students in Urdaneta City and other eastern towns."
                    android:textSize="10sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOUTHWESTERN UNIVERSITY (SWU)"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ARAULLO UNIVERSITY (PHINMA AU)"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA Education acquired PHINMA AU in Cabanatuan City, Nueva Ecija as its first venture into the education industry. It is now a major educational institution that provides basic, tertiary, and professional education."
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:textAlignment="center"
                android:textColor="#036e03"
                android:textSize="30sp"
                android:text="2005"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAGAYAN DE ORO COLLEGE (PHINMA COC)"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA COC was acquired to make quality education accessible to students from all walks of life in Mindanao, especially Misamis Oriental, Camiguin, and Bukidnon."
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:padding="3dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:textAlignment="center"
                android:textColor="#036e03"
                android:textSize="30sp"
                android:text="2009"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNIVERSITY OF ILOILO (PHINMA UI)"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The historic PHINMA UI was acquired by PHINMA Education and now continues its tradition of quality learning toward national development."
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNIVERSITY OF PANGASINAN (PHINMA UPANG))"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The historic PHINMA UI was acquired by PHINMA Education and now continues its tradition of quality learning toward national development."
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:text="2012"
                android:textAlignment="center"
                android:textColor="#036e03"
                android:textSize="30sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA COC PUERTO CAMPUS"
                    android:textColor="@color/black"/>

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHINMA SWU was acquired and its affiliate, Sacred Heart Hospital, became Southwestern University Medical Center (SWU Med).."
                    android:textSize="10sp"
                    android:textColor="@color/black"/>


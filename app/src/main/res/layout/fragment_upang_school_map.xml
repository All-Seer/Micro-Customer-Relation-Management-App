<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpangSchoolMap">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/upang_dagupan_banner"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="DAGUPAN CAMPUS"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/phinmaPrimary"
            android:layout_marginBottom="30dp"
            android:textSize="32dp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/upang_dagupan_map"
            android:layout_marginBottom="30dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D3D3D3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:fontFamily="monospace"
            android:text="FACILITIES"
            android:layout_marginTop="20dp"
            android:textColor="@color/phinmaPrimary"
            android:textSize="32sp"
            android:textStyle="bold" />

        <VideoView
            android:id="@+id/upangMapVideo"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="school Images"
            android:padding="8sp">

            <LinearLayout
                android:id="@+id/imageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivupangfacility1"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility1" />

                <ImageView
                    android:id="@+id/ivupangfacility2"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility2" />

                <ImageView
                    android:id="@+id/ivupangfacility3"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility3" />

                <ImageView
                    android:id="@+id/ivupangfacility4"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility4" />

                <ImageView
                    android:id="@+id/ivupangfacility5"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility5" />

                <ImageView
                    android:id="@+id/ivupangfacility6"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility6" />

                <ImageView
                    android:id="@+id/ivupangfacility7"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility7" />

                <ImageView
                    android:id="@+id/ivupangfacility8"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility8" />

                <ImageView
                    android:id="@+id/ivupangfacility9"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility9" />

                <ImageView
                    android:id="@+id/ivupangfacility10"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility10" />

                <ImageView
                    android:id="@+id/ivupangfacility11"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility11" />

                <ImageView
                    android:id="@+id/ivupangfacility12"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility12" />

                <ImageView
                    android:id="@+id/ivupangfacility13"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility13" />

                <ImageView
                    android:id="@+id/ivupangfacility14"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_marginEnd="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/upangfacility14" />

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="#D3D3D3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="UPANG URDANETA MAP"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/phinmaPrimary"
                android:textSize="30sp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginBottom="30dp"
                android:contentDescription="Map of Phinma Upang"
                android:scaleType="centerInside"
                android:src="@drawable/pu_map" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D3D3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:fontFamily="monospace"
                android:text="FACILITIES"
                android:layout_marginTop="20dp"
                android:textColor="@color/phinmaPrimary"
                android:textSize="32sp"
                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollViewUrdaneta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:contentDescription="Urdaneta School Images"
                android:padding="8sp">

                <LinearLayout
                    android:id="@+id/imageContainerUrdaneta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivurdaneta1"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Com Lab"
                        android:src="@drawable/urdaneta_computerlab" />

                    <ImageView
                        android:id="@+id/ivurdaneta2"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Mac Lab"
                        android:src="@drawable/urdanet_mac" />

                    <ImageView
                        android:id="@+id/ivurdaneta3"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Atrium"
                        android:src="@drawable/urdaneta_atrium" />

                    <ImageView
                        android:id="@+id/ivurdaneta4"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Atrium"
                        android:src="@drawable/urdaneta_accounting" />

                    <ImageView
                        android:id="@+id/ivurdaneta5"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Atrium"
                        android:src="@drawable/urdaneta_atrium2" />

                    <ImageView
                        android:id="@+id/ivurdaneta6"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Atrium"
                        android:src="@drawable/urdaneta_chemistry" />

                    <ImageView
                        android:id="@+id/ivurdaneta7"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Atrium"
                        android:src="@drawable/urdaneta_collegedep" />

                    <ImageView
                        android:id="@+id/ivurdaneta8"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Atrium"
                        android:src="@drawable/urdaneta_csdl" />

                    <ImageView
                        android:id="@+id/ivurdaneta9"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Atrium"
                        android:src="@drawable/urdaneta_gate" />

                    <ImageView
                        android:id="@+id/ivurdaneta10"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Atrium"
                        android:src="@drawable/urdaneta_library" />

                    <ImageView
                        android:id="@+id/ivurdaneta11"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginEnd="20dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="Atrium"
                        android:src="@drawable/urdaneta_csdl" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="30dp"
            android:background="#D3D3D3" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/phinmaPrimary"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>